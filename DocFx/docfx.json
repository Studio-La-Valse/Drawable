{
  "metadata": [
    {
      "src": [
        {
          "src": "../",
          "files": [
            "**/*.csproj"
          ],
          "exclude": [ 
            "**/bin/**", 
            "**/obj/**", 
            "_site/**", 
            "DocFx",
            "Example/*",
            "Example.Avalonia/*",
            "Example.Svg/*",
            "Example.Winforms/*",
            "Example.WPF/*"]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Drawable.LaValse.Net",
      "_appTitle": "Drawable.LaValse.Net",
      "_enableSearch": true,
      "pdf": false
    }
  }
}